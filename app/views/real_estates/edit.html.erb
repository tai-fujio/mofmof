<% if @real_estate.errors.any? %>
  <div id="error_explanation">
    <h2><%= @real_estate.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @real_estate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%=form_for(@real_estate) do |f|%>
  <h1>物件編集</h1>
    <%=f.label :物件名%><br>
    <%=f.text_field :room_name%><br>
    <%=f.label :賃料%><br>
    <%=f.text_field :room_rent%>円<br>
    <%=f.label :住所%><br>
    <%=f.text_field :room_address%><br> 
    <%=f.label :築年数%><br>
    <%=f.text_field :room_age%>年<br>
    <%=f.label :備考%><br>
    <%=f.text_area :room_remarks%><br>
  <hr>
  <%=f.fields_for(:stations) do |station_form|%>
  <h2>最寄り駅<%=station_form.index+1%></h2>
    <%=station_form.label :路線名%><br>
    <%=station_form.text_field :station_line%><br>
    <%=station_form.label :駅名%><br>
    <%=station_form.text_field :station_name%><br>
    <%=station_form.label :徒歩分数%><br>
    <%=station_form.text_field :walk_from%>分<br>    
    <% end %>    
  <%= f.submit "更新する"%>
<% end %>
  <div class="footer_list">
    <ul class="footer">
      <li><%=link_to "詳細",real_estate_path(@real_estate.id)%></li>
      <li><%=link_to "戻る",real_estates_path%></li>
    </ul> 
  </div>   
